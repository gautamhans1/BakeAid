<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="false"
    android:layout_centerHorizontal="false"
    android:layout_gravity="center_horizontal"
    android:layout_margin="@dimen/recipe_fragment_cv_margin"
    app:cardCornerRadius="@dimen/recipe_fragment_cv_corner_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/recipe_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/recipe_image_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            tools:background="@drawable/nutella_pie" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/recipe_frame_layout_height"
            android:background="@drawable/gradient_bg" />

        <TextView
            android:id="@+id/recipe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/recipe_image"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/recipe_name_margin_bottom"
            android:layout_marginStart="@dimen/recipe_name_margin_start"
            android:textColor="@color/white"
            android:textSize="@dimen/recipe_name_text_size"
            tools:text="Nutella Pie" />

    </RelativeLayout>

</android.support.v7.widget.CardView>