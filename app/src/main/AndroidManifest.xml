<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gautamhans.xyz.bakeaid">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name=".ui.RecipeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.RecipeDetailsActivity"
            android:parentActivityName=".ui.RecipeActivity" />

        <receiver android:name=".widget.BakingAidWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/baking_aid_widget_provider_info" />
        </receiver>

        <service android:name=".widget.WidgetUpdateService" />

        <service android:name=".widget.WidgetGridService"
            android:permission="android.permission.BIND_REMOTEVIEWS"
            />
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="6a3762f96d2ec46ea1fc0dba87b1e784b9200e92" />
    </application>


</manifest>